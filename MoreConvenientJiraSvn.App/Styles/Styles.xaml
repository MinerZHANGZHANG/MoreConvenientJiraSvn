<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MoreConvenientJiraSvn.App.Styles"
    xmlns:model="clr-namespace:MoreConvenientJiraSvn.Core.Models;assembly=MoreConvenientJiraSvn.Core">

    <DataTemplate x:Key="LevelTemplate">
        <Border
            Padding="1"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="5">
            <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding}" Value="Normal">
                                <Setter Property="Background" Value="GreenYellow" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding}" Value="Warning">
                                <Setter Property="Background" Value="Yellow" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding}" Value="Error">
                                <Setter Property="Background" Value="OrangeRed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Border>

    </DataTemplate>

    <!--  Jira form field  -->
    <DataTemplate x:Key="JiraTextTemplate" DataType="{x:Type model:JiraTextField}">
        <StackPanel Orientation="Vertical">
            <TextBlock MinWidth="120" Text="{Binding Name}" />
            <TextBox
                MinWidth="120"
                MinHeight="60"
                Padding="4"
                AcceptsReturn="True"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding Value}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="JiraSelectTemplate" DataType="{x:Type model:JiraSelectField}">
        <StackPanel Orientation="Vertical">
            <TextBlock MinWidth="120" Text="{Binding Name}" />
            <ComboBox
                MinWidth="120"
                DisplayMemberPath="OptionName"
                ItemsSource="{Binding Options}"
                SelectedItem="{Binding Value}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="JiraDateTemplate" DataType="{x:Type model:JiraDateField}">
        <StackPanel Orientation="Vertical">
            <TextBlock MinWidth="120" Text="{Binding Name}" />
            <DatePicker
                MinWidth="120"
                SelectedDate="{Binding Value}"
                SelectedDateFormat="Short" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="ListBoxTemplate" DataType="{x:Type model:JiraField}">
        <StackPanel DataContext="{Binding ElementName=ContentControl, Path=DataContext}" Orientation="Vertical">
            <TextBlock MinWidth="120" Text="{Binding FieldName}" />
            <!--<ListBox
                        MinWidth="120"
                        ItemsSource="{Binding Options}"
                        SelectionChanged="ListBox_SelectionChanged"
                        SelectionMode="Multiple">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type model:FieldOption}">
                                <TextBlock Text="{Binding OptionName}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>-->
        </StackPanel>
    </DataTemplate>
    <local:JiraFieldTemplateSelector
        x:Key="JiraFieldTemplateSelector"
        JiraDateTemplate="{StaticResource JiraDateTemplate}"
        JiraSelectTemplate="{StaticResource JiraSelectTemplate}"
        JiraTextTemplate="{StaticResource JiraTextTemplate}" />


</ResourceDictionary>