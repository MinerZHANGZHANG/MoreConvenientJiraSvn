<Page
    x:Class="MoreConvenientJiraSvn.App.Views.Pages.HostedServiceSettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:MoreConvenientJiraSvn.App.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MoreConvenientJiraSvn.App.Views.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PluginSettingPage"
    d:DesignHeight="520"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="8">
            <!--  Base setting  -->
            <Expander Header="Jira状态检测设置" IsExpanded="True">
                <StackPanel Orientation="Vertical">
                    <control:ConfigLine
                        Margin="8"
                        ConfigName="上一次执行时间"
                        Foreground="Black"
                        IsButtonVisible="False">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                Grid.Column="0"
                                Foreground="Black"
                                IsEnabled="False"
                                KeyUp="TextBox_KeyUp"
                                LostFocus="TextBox_LostFocus"
                                Style="{StaticResource CustomMaterialTextBoxStyle}"
                                Text="20254343" />
                            <Button
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Content="执行" />
                        </Grid>
                    </control:ConfigLine>

                    <control:ConfigLine
                        Margin="8"
                        ConfigName="需要定时刷新的过滤器"
                        IsButtonVisible="False">
                        <ComboBox ItemsSource="{Binding Filters}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            Checked="CheckBox_Checked"
                                            Content="{Binding Name}"
                                            IsChecked="{Binding IsChecked}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </control:ConfigLine>
                </StackPanel>
            </Expander>



        </StackPanel>
    </ScrollViewer>
</Page>
