<UserControl
    x:Class="MoreConvenientJiraSvn.App.Views.Controls.MainControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:MoreConvenientJiraSvn.Core.Enums;assembly=MoreConvenientJiraSvn.Core"
    xmlns:local="clr-namespace:MoreConvenientJiraSvn.App.Views.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:MoreConvenientJiraSvn.App.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModel:MainControlViewModel}"
    d:DesignHeight="512"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Top title  -->
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Margin="16,0,16,0"
                VerticalAlignment="Center"
                FontSize="20"
                Text="插件信息" />
            <Button
                Margin="0,4,0,4"
                Command="{Binding RefreshMessageCommand}"
                Content="刷新"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>

        <!--  Center grid  -->
        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding PluginMessages}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Level}"
                    Header="级别" />
                <DataGridTextColumn
                    Width="5*"
                    Binding="{Binding Info}"
                    Header="信息" />
                <DataGridTemplateColumn Width="64" Header="编辑">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="编辑" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <materialDesign:DataGridComboBoxColumn />
            </DataGrid.Columns>
        </DataGrid>

        <!--  bottom button  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="128"
                Margin="8"
                Command="{Binding OpenWindowCommand}"
                CommandParameter="{x:Static enum:WindowType.Jira}"
                Content="Jira浏览"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Width="128"
                Margin="8"
                Command="{Binding OpenWindowCommand}"
                CommandParameter="{x:Static enum:WindowType.Svn}"
                Content="Svn浏览"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Width="128"
                Margin="8"
                Command="{Binding OpenWindowCommand}"
                CommandParameter="{x:Static enum:WindowType.Sql}"
                Content="PLSql检测"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Width="128"
                Margin="8"
                Content="For排版"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </StackPanel>
    </Grid>
</UserControl>
