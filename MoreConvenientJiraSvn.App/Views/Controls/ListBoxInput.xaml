<UserControl
    x:Class="MoreConvenientJiraSvn.App.Views.Controls.ListBoxInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MoreConvenientJiraSvn.App.Views.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="160"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <materialDesign:AutoSuggestBox
  materialDesign:TextFieldAssist.HasClearButton="True"
  DropDownElevation="Dp0"
            x:Name="InputTextBox"
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Bottom"
            />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Click="AddButton_Click"
            Content="+" />
        <ListBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" x:Name="SelectedItemsList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                        <Button
                            Margin="5,0"
                            Click="DeleteButton_Click"
                            Content="-"
                            DockPanel.Dock="Right" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
