<Window
    x:Class="MoreConvenientJiraSvn.App.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MoreConvenientJiraSvn.App.Views.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:MoreConvenientJiraSvn.App.ViewModels"
    Title="更方便的Jira和Svn"
    Width="900"
    Height="600"
    d:DataContext="{d:DesignInstance Type=viewModel:MainWindowViewModel}"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">
    <StackPanel>
        <TabControl
            materialDesign:ColorZoneAssist.Mode="PrimaryLight"
            Style="{StaticResource MaterialDesignFilledTabControl}">
            <TabItem Header="首页">
                <Frame
                    NavigationUIVisibility="Hidden"
                    Source="/Views/Pages/IndexPage.xaml" />
            </TabItem>
            <TabItem Header="Jira设置">
                <Frame
                    NavigationUIVisibility="Hidden"
                    Source="/Views/Pages/JiraSettingPage.xaml" />
            </TabItem>
            <TabItem Header="Svn设置">
                <Frame
                    NavigationUIVisibility="Hidden"
                    Source="/Views/Pages/SvnSettingPage.xaml" />
            </TabItem>
            <TabItem Header="定时任务设置">
                <Frame
                    NavigationUIVisibility="Hidden"
                    Source="/Views/Pages/HostedServiceSettingPage.xaml" />
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
