<UserControl
    x:Class="MoreConvenientJiraSvn.Gui.View.Controls.MainControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MoreConvenientJiraSvn.Gui.View.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MoreConvenientJiraSvn.Gui.ViewModel"
    d:DataContext="{d:DesignInstance Type=model:MainControlViewModel}"
    d:DesignHeight="520"
    d:DesignWidth="700"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  上方标题  -->
        <StackPanel Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="20"
                Text="插件信息" />
            <Button Command="{Binding RefreshMessageCommand}" Content="刷新" Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>

        <DataGrid
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="False"
            ItemsSource="{Binding PluginMessages}"
            CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding SourceName}"
                    Header="来源" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Info}"
                    Header="信息" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Level}"
                    Header="级别" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Time}"
                    Header="时间" />
                <DataGridTemplateColumn Width="100" Header="编辑">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding EditCommand}" Content="编辑" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <materialDesign:DataGridComboBoxColumn />
            </DataGrid.Columns>
        </DataGrid>

        <!--  下方按钮  -->
        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="10"
                Command="{Binding OpenPluginPageCommand}"
                CommandParameter="Jira2LocalDir"
                Content="Jira本地化"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Width="100"
                Margin="10"
                Command="{Binding OpenPluginPageCommand}"
                CommandParameter="SvnJiraLink"
                Content="Svn关联Jira"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Width="100"
                Margin="10"
                Command="{Binding OpenPluginPageCommand}"
                CommandParameter="SqlCheck"
                Content="Sql检测"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Width="100"
                Margin="10"
                Content="插件4"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </StackPanel>
    </Grid>
</UserControl>
